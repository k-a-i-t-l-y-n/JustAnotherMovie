        <Button Content="Next" HorizontalAlignment="Left" Margin="670,343,0,0" VerticalAlignment="Top" Width="89" Height="46" FontFamily="Monotype Corsiva" FontSize="16" Click="Button_Click_1"/>
        <Button Content="Previous" HorizontalAlignment="Left" Margin="5,3,0,0" VerticalAlignment="Top" Width="97" Height="49" FontFamily="Monotype Corsiva" FontSize="16" Click="Button_Click_2" RenderTransformOrigin="0.403,0.405"/>

    </Grid>
